{
    "compilerOptions": {
        "target": "ES6", 
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "rootDirs": ["src"],  
        "outDir": "./build", 
        "esModuleInterop": true,  
        "forceConsistentCasingInFileNames": true, 
        "strict": true,
        "skipLibCheck": true 
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}